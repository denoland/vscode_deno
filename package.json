{
  "name": "vscode-deno",
  "displayName": "%deno.displayName%",
  "description": "%deno.description%",
  "version": "1.3.0",
  "publisher": "justjavac",
  "icon": "deno.png",
  "galleryBanner": {
    "color": "#3B3738",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justjavac/vscode-deno"
  },
  "bugs": {
    "url": "https://github.com/justjavac/vscode-deno/issues"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": ["Programming Languages", "Other"],
  "keywords": ["deno"],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "workspaceContains:**/.denorc",
    "workspaceContains:**/.denoignore",
    "onCommand:deno.init",
    "onCommand:deno.recompile",
    "onCommand:deno.types",
    "onCommand:deno.prefetch",
    "onCommand:deno.fmt",
    "onCommand:deno.enable",
    "onCommand:deno.disable"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "commands": [
      {
        "command": "deno.enable",
        "title": "%deno.command.enable%",
        "category": "deno"
      },
      {
        "command": "deno.disable",
        "title": "%deno.command.disable%",
        "category": "deno"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Deno",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.enabled%"
        },
        "deno.packageManager": {
          "type": "string",
          "enum": ["npm", "yarn", "pnpm"],
          "default": "npm",
          "description": "%deno.config.packageManager%"
        },
        "deno.alwaysShowStatus": {
          "type": "boolean",
          "default": true,
          "description": "%deno.config.alwaysShowStatus%",
          "scope": "window"
        },
        "deno.autoFmtOnSave": {
          "type": "boolean",
          "default": false,
          "description": "%deno.config.autoFmtOnSave%"
        },
        "deno.dtsPath": {
          "type": ["string", "null"],
          "default": null,
          "description": "%deno.config.dtsPath%"
        }
      }
    },
    "languages": [
      {
        "id": "ignore",
        "filenames": [".denoignore"]
      },
      {
        "id": "jsonc",
        "filenames": [".denorc"],
        "filenamePatterns": ["denorc.*.json"]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".denorc",
        "url": "./schemas/denorc.schema.json"
      },
      {
        "fileMatch": "denorc.*.json",
        "url": "./schemas/denorc.schema.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/deno.json"
      }
    ],
    "configurationDefaults": {
      "[typescript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "justjavac.vscode-deno"
      },
      "[markdown]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "justjavac.vscode-deno"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "check": "deno run --allow-read --allow-write https://deno.land/std/prettier/main.ts --check --ignore \"node_modules\" --ignore \"out\"",
    "format": "deno run --allow-read --allow-write https://deno.land/std/prettier/main.ts --write --ignore \"node_modules\" --ignore \"out\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": ["yarn format", "git add"]
  },
  "devDependencies": {
    "@types/execa": "^0.9.0",
    "@types/node": "^11.13.5",
    "@types/which": "^1.3.1",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "typescript": "^3.2.4",
    "vscode": "^1.1.27"
  },
  "dependencies": {
    "execa": "^1.0.0",
    "typescript-deno-plugin": "^1.2.0",
    "vscode-nls": "^4.0.0",
    "which": "^1.3.1"
  }
}
